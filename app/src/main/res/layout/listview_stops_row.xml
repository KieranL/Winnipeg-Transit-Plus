<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?outline"
    android:padding="5dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/favourites_stop_name"
        android:gravity="left"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favourites_stop_name"
        android:layout_alignRight="@+id/favourites_stop_number"
        android:columnWidth="24dp"
        android:minHeight="24dp"
        android:numColumns="auto_fit"
        android:horizontalSpacing="2dp"
        android:id="@+id/gridview_stops_row_route_numbers"
        android:textAlignment="center"
        android:layout_toLeftOf="@+id/favourites_stop_number"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/favourites_stop_number"
        android:layout_marginTop="23dp"
        android:layout_alignTop="@+id/favourites_stop_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="right" />

</RelativeLayout>


