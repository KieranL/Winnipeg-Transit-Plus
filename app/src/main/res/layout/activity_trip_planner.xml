<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trip_planner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kieran.winnipegbus.Activities.TripPlannerActivity">

    <TextView
        android:text="Origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/origin_textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/origin_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/origin_selection_group">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="?attr/favouriteStopIcon"
            android:id="@+id/imageView" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="?attr/nearbyStopsIcon"
            android:layout_toRightOf="@+id/imageView"
            android:id="@+id/imageView3" />
    </RelativeLayout>

    <TextView
        android:text="Destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/origin_selection_group"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/destination_textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destination_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/destination_selection_group">
        <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?attr/favouriteStopIcon"
        android:id="@+id/imageView2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="?attr/nearbyStopsIcon"
            android:layout_toRightOf="@+id/imageView2"
            android:id="@+id/imageView4" />
    </RelativeLayout>

    <Button
        android:text="Get Directions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="getDirections"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="162dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="pick date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="pickDate"
        android:id="@+id/trip_time_date"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:paddingRight="8dp"/>

    <TextView
        android:text="pick time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_toRightOf="@+id/trip_time_date"
        android:onClick="pickTime"
        android:id="@+id/trip_time_hour_minute"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/time_mode_options"
        android:id="@+id/spinner"
        android:spinnerMode="dialog"
        android:layout_below="@+id/destination_selection_group"
        android:layout_toRightOf="@+id/destination_selection_group"
        android:layout_toEndOf="@+id/destination_selection_group" />

    <TextView
        android:text="Time Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_mode_textView"
        android:layout_below="@+id/destination_selection_group"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


</RelativeLayout>
