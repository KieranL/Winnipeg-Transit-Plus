<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="?dialogPreferredPadding">

    <Button
        android:text="Current Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/current_location_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableLeft="?attr/nearbyStopsIcon"/>
    <Button
        android:text="Pick from Favourites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/from_favourites_button"
        android:layout_below="@+id/current_location_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableLeft="?attr/favouriteStopIcon"/>

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/from_favourites_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:queryHint="Search"
        android:id="@+id/location_searchView"/>
</RelativeLayout>
